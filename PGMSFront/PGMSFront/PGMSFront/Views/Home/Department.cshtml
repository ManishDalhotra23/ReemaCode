                            CompanyDepartmentList = data.CompanyDepartmentList;
                            BindWSData(data.CompanyDepartmentList);

                        }
                        btnSave.show();
                        alert(data.Status);
                    },
                    error: function (xhr) {

                        btnSave.show();
                        LoaderHide();
                        alert(xhr.responseText);
                    }
