<div class="contentPage" style="min-height: 800px;">
    <div class="contactFormPage">
        <div class="contactForm lined col-xl-8 col-lg-8 col-md-8 col-sm-12 col-xs-12 col-xxs-12">
            <section class="cmp-contact-form">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="inputCompany" class="col-xs-3 col-xxs-12 control-label">
                            Company
                            <span class="req">*</span>
                        </label>
                        <div class="col-xs-9 col-xxs-12">
                            <input type="text" class="form-control" name="inputCompany" id="inputCompany">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputFirstName" class="col-xs-3 col-xxs-12 control-label">
                            First Name
                            <span class="req">*</span>
                        </label>
                        <div class="col-xs-9 col-xxs-12">
                            <div class="help-block with-errors"></div>
                            <input type="text" class="form-control" name="inputFirstName" id="inputFirstName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputLastName" class="col-xs-3 col-xxs-12 control-label">
                            Last Name
                            <span class="req">*</span>
                        </label>
                        <div class="col-xs-9 col-xxs-12">
                            <div class="help-block with-errors"></div>
                            <input type="text" class="form-control" name="inputLastName" id="inputLastName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail" class="col-xs-3 col-xxs-12 control-label">
                            E-mail
                            <span class="req">*</span>
                        </label>
                        <div class="col-xs-9 col-xxs-12">
                            <div class="help-block with-errors"></div>
                            <input type="email" class="form-control" name="inputEmail" id="inputEmail">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputTel" class="col-xs-3 col-xxs-12 control-label">
                            Phone number
                            <span class="req">*</span>
                        </label>
                        <div class="col-xs-9 col-xxs-12">
                            <div class="help-block with-errors"></div>
                            <input type="tel" class="form-control" name="inputTel" id="inputTel">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="selectCountry" class="col-xs-3 col-xxs-12 control-label">
                            Country
                            <span class="req">*</span>
                        </label>
                        <div class="col-xs-9 col-xxs-12">
                            <select name="selectCountry" id="selectCountry" class="form-control" data-style="btn-primary">
                                <option value="0">Select a country</option>
                                @foreach (var itm in ViewBag.Country)
                                {
                                    <option value='@itm.Value'>@itm.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    @*<div class="form-group">
                            <label for="selectSubject" class="col-xs-3 col-xxs-12 control-label">
                                Subject
                                <span class="req">*</span>
                            </label>
                            <div class="selectwrap col-xs-9 col-xxs-12">
                                <select name="selectSubject" id="selectSubject" class="form-control">
                                    <option value="0">Select a subject</option>
                                    @foreach (var itm in ViewBag.Subject)
                                    {
                                        <option value='@itm.Value'>@itm.Text</option>
                                    }
                                </select>
                            </div>
                        </div>*@
                    <div class="form-group">
                        <label for="inputSubject" class="col-xs-3 col-xxs-12 control-label">
                            Subject
                            <span class="req">*</span>
                        </label>
                        <div class="col-xs-9 col-xxs-12">
                            <div class="help-block with-errors"></div>
                            <input type="text" class="form-control" name="inputSubject" id="inputSubject">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textareaMessage" class="col-xs-3 col-xxs-12 control-label">
                            Message
                            <span class="req">*</span>
                        </label>
                        <div class="col-xs-9 col-xxs-12">
                            <textarea name="textareaMessage" id="textareaMessage" class="form-control" style="height: 50px !important;"></textarea>
                        </div>
                    </div>
                    <div class="mandatoryAdvisor col-xs-offset-3 col-xs-9 col-xxs-12">
                        <label style="float: left;">Please read and accept our Privacy Policy</label>
                        <span class="req">(*)</span>
                        Mandatory field
                    </div>
                    <div class="col-xs-offset-3 col-xs-9 col-xxs-12">
                        <div class="checkbox">
                            <div class="help-block with-errors"></div>
                            <input type="checkbox" name="policy" id="policy" class="styled">
                            <label for="policy">
                                I have read and accept the
                                <a href="javascript:void(0)">
