                        Manpur Road, Madav Pura Village, Khandva, Pithampur, Madhya Pradesh 454774
                    </div>
                    <div class="officeTelFax" style="font-size: 12px;">
                        Tel.:
                        <a href="tel:011 4921 5555" style="color: #333333;">+91 9893892310</a>
                        @*Fax.:
                            +34 977 166 007*@
                    </div>
                    Email.:
                    <a href="mailto:info@natrax.in" class="officeMail">info@natrax.in</a>
                    <br>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        $(document).ready(function () {
            MaskControls();
            $("#inputCompany").focus();
            $("#btnContact").click(function () {
                if (validation()) {
                    var model = {};
                    model.CompanyName = $("#inputCompany").val().trim();
                    model.FirstName = $("#inputFirstName").val().trim();
                    model.LastName = $("#inputLastName").val().trim();
                    model.EmailAddress = $("#inputEmail").val();
                    model.PhoneNo = $("#inputTel").val().trim();
                    model.CountryId = $("#selectCountry").val().trim();
                    //model.SubjectPropId = $("#selectSubject").val().trim();
                    model.Subject = $("#inputSubject").val().trim();
                    model.Remark = $("#textareaMessage").val().trim();
                    if ($("input[name='policy']:checked").val() === "on") {
                        model.AcceptPrivacyPolicy = true;
                    } else {
                        model.AcceptPrivacyPolicy = false;
                    }
                    if ($("input[name='event']:checked").val() === "on") {
                        model.EventInformed = true;
                    } else {
                        model.EventInformed = false;
                    }
                    if ($("input[name='sendcopy']:checked").val() === "on") {
                        model.SendMail = true;
                    } else {
                        model.SendMail = false;
                    }
                    var data = {'model': model};
                    var dataWithAntiforgeryToken = $.extend(data, { "__RequestVerificationToken": $("input[name=__RequestVerificationToken]").val() });
                    $.ajax({
                        url: '@Url.Action("ContactInsertFront", "Front")',
                        type: 'POST',
                        dataType: 'json',
                        async: true,
                        data: dataWithAntiforgeryToken,
                        beforeSend: function () {
                            $(".ntx-loader").show();
                        },
                        success: function (data) {
                            if (data.StatusId != "99" && data.StatusId != "-99") {
                                $(".contactForm").hide();
                                $(".contactFormSent").show();
                                $(".ntx-loader").hide();
                            }
                            else {
                                $(".ntx-loader").hide();
                                alert(data.Status);
                            }
                        },
                        error: function (xhr) {
                            $(".ntx-loader").hide();
                            alert(xhr.responseText);
                        }
                    });
                }
            });
        });

        function validation() {
            try {
                var strMSG = '';
                if ($("#inputCompany").val().trim() == "") {
                    strMSG = strMSG + 'Company Name \n</br>'
                }
                if ($("#inputFirstName").val().trim() == "") {
                    strMSG = strMSG + 'First Name \n</br>'
                }
                if ($("#inputLastName").val().trim() == "") {
                    strMSG = strMSG + 'Last Name \n</br>'
                }
                if ($("#inputEmail").val().trim() == "") {
                    strMSG = strMSG + 'E-mail \n</br>'
                }
                if ($("#inputTel").val().trim() == "") {
                    strMSG = strMSG + 'Phone number \n</br>'
                }
                if ($("#selectCountry").val() == null || $("#selectCountry").val() == undefined || parseInt($("#selectCountry").val()) == 0) {
                    strMSG = strMSG + 'Country \n</br>'
                }
                //if ($("#selectSubject").val() == null || $("#selectSubject").val() == undefined || parseInt($("#selectSubject").val()) == 0) {
                //    strMSG = strMSG + 'Subject \n</br>'
                //}
                if ($("#inputSubject").val().trim() == "") {
                    strMSG = strMSG + 'Subject \n</br>'
                }
                if ($("#textareaMessage").val().trim() == "") {
                    strMSG = strMSG + 'Message \n</br>'
                }
                if ($("input[name='policy']:checked").val() == undefined || $("input[name='policy']:checked").val() == "") {
                    strMSG = strMSG + 'Please read the policy \n</br>'
                }
                if (strMSG != '') {
                    alert("Please enter data for Mandatory fields  \n</br>" + strMSG);
                    return false;
                } else {
                    return true;
                }
            } catch (e) {
                $(".ntx-loader").hide();
                alert(e.message);
                return false;
            }
        }

        function MaskControls() {
            try {
                (function ($) {
                    $(function () {
                        $("#inputCompany").attr('onkeypress', 'return CheckIsAlphaNumeric(event,this);');
                        $("#inputFirstName").attr('onkeypress', 'return CheckIsAlpha(event,this);');
                        $("#inputLastName").attr('onkeypress', 'return CheckIsAlpha(event,this);');
                        $("#inputEmail").IsEmailOnly();
                        $("#inputTel").attr('onkeypress', 'return CheckIsNumeric(event,this);');
                    });
                })(jQuery);
            }
            catch (e) {
                $(".ntx-loader").hide();
                alert(e.message);
                return false;
            }
        }
</script>
